<?xml version="1.0" encoding="utf-8"?>
<!--
    For further information:
    - Support Library: https://developer.android.com/topic/libraries/support-library/index.html
    - GridLayout documentation: https://developer.android.com/reference/android/support/v7/widget/GridLayout.html
    - Namespaces: https://en.wikipedia.org/wiki/Namespace
-->
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <!-- Text field containing the result(s) -->
    <TextView
        android:id="@+id/resultTextView"
        android:gravity="end|center"
        android:padding="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        app:layout_column="0"
        app:layout_columnSpan="4"
        app:layout_columnWeight="1"
        app:layout_gravity="fill"
        app:layout_row="0"
        app:layout_rowWeight="1" />

    <!-- Operational buttons (+, -, *, /) -->
    <Button
        android:id="@+id/buttonPlus"
        style="@style/Button"
        android:tag="+"
        android:text="+"
        app:layout_column="3"
        app:layout_row="1"/>

    <Button
        android:id="@+id/buttonMinus"
        style="@style/Button"
        android:tag="-"
        android:text="-"
        app:layout_column="3"
        app:layout_row="2" />

    <Button
        android:id="@+id/buttonTimes"
        style="@style/Button"
        android:tag="*"
        android:text="*"
        app:layout_column="3"
        app:layout_row="3" />

    <Button
        android:id="@+id/buttonDiv"
        style="@style/Button"
        android:tag="/"
        android:text="/"
        app:layout_column="3"
        app:layout_row="4" />

    <!-- Number buttons [0, 9] -->
    <Button
        android:id="@+id/button1"
        style="@style/Button"
        android:tag="1"
        android:text="1"
        app:layout_column="0"
        app:layout_row="3" />

    <Button
        android:id="@+id/button2"
        style="@style/Button"
        android:tag="2"
        android:text="2"
        app:layout_column="1"
        app:layout_row="3" />

    <Button
        android:id="@+id/button3"
        style="@style/Button"
        android:tag="3"
        android:text="3"
        app:layout_column="2"
        app:layout_row="3" />

    <Button
        android:id="@+id/button4"
        style="@style/Button"
        android:tag="4"
        android:text="4"
        app:layout_column="0"
        app:layout_row="2" />

    <Button
        android:id="@+id/button5"
        style="@style/Button"
        android:tag="5"
        android:text="5"
        app:layout_column="1"
        app:layout_row="2" />

    <Button
        android:id="@+id/button6"
        style="@style/Button"
        android:tag="6"
        android:text="6"
        app:layout_column="2"
        app:layout_row="2" />

    <Button
        android:id="@+id/button7"
        style="@style/Button"
        android:tag="7"
        android:text="7"
        app:layout_column="0"
        app:layout_row="1" />

    <Button
        android:id="@+id/button8"
        style="@style/Button"
        android:tag="8"
        android:text="8"
        app:layout_column="1"
        app:layout_row="1" />

    <Button
        android:id="@+id/button9"
        style="@style/Button"
        android:tag="9"
        android:text="9"
        app:layout_column="2"
        app:layout_row="1" />

    <Button
        android:id="@+id/button0"
        style="@style/Button"
        android:tag="0"
        android:text="0"
        app:layout_column="1"
        app:layout_row="4" />

    <!-- Clear and equal (=) buttons -->
    <Button
        android:id="@+id/buttonClear"
        style="@style/Button"
        android:tag="CE"
        android:text="CE"
        app:layout_column="0"
        app:layout_row="4" />

    <Button
        android:id="@+id/buttonEqual"
        style="@style/Button"
        android:tag="="
        android:text="="
        app:layout_column="2"
        app:layout_row="4" />

</android.support.v7.widget.GridLayout>